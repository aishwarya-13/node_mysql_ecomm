<%- include('../includes/head.ejs') %>
</head>
<%- include('../includes/nav.ejs') %>
            <main class='text-center'>
                    <% if(products.length > 0){ 
                        for(let item of products) { %>
                            <div class="card" style="width: 18rem;">
                                <img src="<%= item.imageUrl %>" class="card-img-top" alt="<%= item.imageUrl %>"/>
                                <div class="card-body">
                                    <h5 class="card-title"><%= item.title %></h5>
                                    <p class="card-text"><%= item.description %></p>
                                    <p class="card-text"><%= item.price %></p>
                                    <div class='row'>
                                        <a href='/products/<%= item.id %>' class='btn btn-success col-md-4'>Details</a>
                                        <span class='col-md-1'></span>
                                        <a href='/add-to-cart/<%= item.id %>' class='btn btn-success col-md-6'>Add to Cart</a>
                                         <!-- <form action='/add-to-cart' class='col-md-6' method='POST'>
                                            <button class="btn btn-success" type='submit'>Add to Cart</button>
                                            <input type='hidden' name='productId' value='<%= item.productId %>'/>
                                        </form> -->
                                    </div>
                                    
                                </div>
                            </div>
                    <% }} else {%>
                        <h3>No Products Found</h3>
                    <% } %>
            </main>
<%- include('../includes/end.ejs') %>